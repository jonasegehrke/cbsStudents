@model cbsStudents.Models.Entities.PostIndexVm

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Post.Title
        </dd>
        <dt class="col-sm-2">
            Text
        </dt>
        <dd class="col-sm-10">
            @Model.Post.Text
        </dd>
        <dt class="col-sm-2">
            Created
        </dt>
        <dd class="col-sm-10">
            @Model.Post.Created
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Post.Status
        </dd>
        <dt class="col-sm-2">
            Creator
        </dt>
        <dd class="col-sm-10">
            @Model.Post.User.UserName
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Post.Id">Edit</a> |
    <a asp-action="RedirectToCreateComment" asp-route-id="@Model?.Post.Id">Add comment</a> |
    <a asp-action="Index">Back to List</a>
</div>

@foreach (var comment in Model.Post.Comments)
{
    <div class="row">
    <div class="col-md-4">
        <div>
            @comment.User
        </div>

        <div>
            @comment.Text
        </div>
        <a asp-action="RedirectToDeleteComment" asp-route-id="@comment.CommentId">Delete comment</a> |

        <br>
    </div>
</div>
}
