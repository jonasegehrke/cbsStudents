@model cbsStudents.Models.Entities.PostIndexVm

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div class="row">
        <div class="col">
            <h4>Post</h4>
        </div>
        <div class="col-md-3">
            <div class="h-100 d-flex align-items-end justify-content-around">
                <a asp-action="Edit" asp-route-id="@Model?.Post.Id">Edit</a> |
                <a asp-action="RedirectToCreateComment" asp-route-id="@Model?.Post.Id">Add comment</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Post.Title
        </dd>
        <dt class="col-sm-2">
            Text
        </dt>
        <dd class="col-sm-10">
            @Model.Post.Text
        </dd>
        <dt class="col-sm-2">
            Created
        </dt>
        <dd class="col-sm-10">
            @Model.Post.Created
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Post.Status
        </dd>
        <dt class="col-sm-2">
            Creator
        </dt>
        <dd class="col-sm-10">
            @Model.Post.User.UserName
        </dd>
    </dl>
</div>


@foreach (var comment in Model.Post.Comments)
{
    <div class="row">

        <div class="col-4">
            @comment.User
        </div>

        <div class="col-4">
            @comment.Text
        </div>
        <div class="col-4">
            <a asp-action="RedirectToDeleteComment" asp-route-id="@comment.CommentId">Delete comment</a>
        </div>
        <br>

    </div>
}
