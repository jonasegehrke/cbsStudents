@model cbsStudents.Models.Entities.PostIndexVm

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-controller="Posts" asp-action="Index" method="get">
    <div>
        <label for="search">Search:</label>
        <input type="text" id="search" name="SearchString" value="@Model.SearchString" />
        <input type="submit" value="Search" />
    </div>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>UserId</th>
            <th>Title</th>
            <th>Text</th>
            <th>Created</th>
            <th>Status</th>
         @*    <th>
                @Html.DisplayNameFor(model => model.Posts.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
